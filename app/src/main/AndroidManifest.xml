<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xavi.photocrypt">

    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.photocrypt.photocrypt.Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.photocrypt.photocrypt.Activities.GalleryView" />
        <activity
            android:name="com.photocrypt.photocrypt.Activities.AlbumView"
            android:label="@string/title_activity_album_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.photocrypt.photocrypt.Activities.ImageViewer"></activity>
    </application>

</manifest>